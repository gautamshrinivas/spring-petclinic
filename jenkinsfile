pipeline {
    agent { label 'petclinic'}
    triggers {
        cron()
    }
    parameters {
       choice(name: 'BRANCH_TO_BUILD', choices: ['main', 'oct21'], description: 'for selecting branch')
       string(name: 'BUILD', defaultValue: 'mvn package', description: 'for build action')
    }
    stages {
        stage ('vcs') {
            steps {
                git url: 'https://github.com/gautamshrinivas/spring-petclinic.git',
                branch: "${params.BRANCH_TO_BUILD}"
            }
        }
        stage ('build') {
            steps {
                sh "${params.BUILD_ON}"
            }
        }
        stage ('artifactory') {
             steps {
               rtMavenDeployer (
                    id: "MAVEN_DEPLOYER",
                    serverId: "JFROG_JENKINS",
                    releaseRepo: "jenkins-libs-release-local",
                    snapshotRepo: "jenkins-libs-snapshot-local"
                )
             }
            }
            stage ('Exec Maven') {
            steps {
                rtMavenRun (
                    tool: "MVN_DEFAULT", // Tool name from Jenkins configuration
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: "MAVEN_DEPLOYER"
                )
            }
        }
         stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "JFROG_JENKINS"
                )
            }
         }

    }
}